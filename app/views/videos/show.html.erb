<%- model_class = Video -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @video.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @video.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language) %>:</strong></dt>
  <dd><%= @video.language %></dd>
  <dt><strong><%= model_class.human_attribute_name(:artifact) %>:</strong></dt>
  <dd><%= @video.artifact.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clip) %>:</strong></dt>
  <dd>
  <div class="control-group">
    <div class="controls">
      <%= video_tag @video.clip, :autoplay => false, :controls => true, :width => "500px", :heigth => "350px"  %>
    </div>
  </div>
  </dd>
  <dt><strong><%= model_class.human_attribute_name(:clip_content_type) %>:</strong></dt>
  <dd><%= @video.clip_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:clip_file_size) %>:</strong></dt>
  <dd><%= @video.clip_file_size %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              videos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_video_path(@video), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              video_path(@video),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
