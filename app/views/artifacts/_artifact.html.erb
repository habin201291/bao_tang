<tr id="<%= dom_id artifact %>">
  <td><%= check_box_tag "artifacts_checkbox[]", artifact.id %></td>
  <td><%= link_to artifact.id, artifact_path(artifact) %></td>
  <td><%= artifact.name %></td>
  <td><%= artifact.dating %></td>
  <!--<td><%= artifact.description %></td>-->
  <td><%= artifact.code %></td>
  <td><%= artifact.place %></td>
  <td><%= artifact.size %></td>
  <td><%= artifact.language %></td>
  <td><%= artifact.material.name %></td>
  <td><%= artifact.gallery.name %></td>
  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_artifact_path(artifact), :class => 'btn btn-mini icon-pencil', :remote => true %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                artifact_path(artifact),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-mini btn-danger icon-remove', :remote => true %>
  </td>
</tr>